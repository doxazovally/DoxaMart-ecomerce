<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d3f02"
    tools:context=".com.team.my_gorcery.activities.ForgotPassActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/button_rect">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
           android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Recover Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#7d3f02"
            android:fontFamily="@font/caveat_brush"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_key"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_key"
        android:layout_marginTop="40dp"
        android:src="@drawable/key_white"
        android:padding="5dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_key"
        android:hint="Email"
        android:textColorHint="#7d3f02"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_email_black"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:background="@drawable/shape_rec2"/>



    <Button
        android:id="@+id/Recoverbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:minWidth="120dp"
        android:background="@drawable/button2"
        android:layout_marginStart="15dp"
        android:text="Recover"
        android:fontFamily="@font/salsa"
        android:textColor="#7d3f02"/>


</RelativeLayout>

