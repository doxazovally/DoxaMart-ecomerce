<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C46507"
    tools:context=".com.team.my_gorcery.activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Toolbar-->
            <RelativeLayout
                android:id="@+id/login_head"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/button_rect"
                android:padding="10dp">

                <TextView
                    android:id="@+id/write_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Splendid markets and products are just the start  "
                   android:textSize="12sp"
                    android:textColor="#7d3f02"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/write_up2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/write_up"
                    android:text="of this place...."
                  android:textSize="12sp"
                    android:textColor="#7d3f02"
                    android:textStyle="bold" />


            </RelativeLayout>

            <Button
                android:id="@+id/icon_key"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="200dp"
                android:background="@drawable/shape_rec2"
                android:fontFamily="@font/caveat_brush"
                android:padding="5dp"
                android:src="@drawable/key_white"
                android:text="Welcome To DoxaMart"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#7d3f02"/>

            <EditText
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_key"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_rec2"
                android:drawableStart="@drawable/ic_email_black"
                android:textColorHint="#7d3f02"
                android:drawablePadding="5dp"
                android:hint="Email"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email1"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_rec2"
                android:drawableStart="@drawable/ic_lock_outline_black"
                android:drawablePadding="5dp"
                android:textColorHint="#7d3f02"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <TextView
                android:id="@+id/fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/salsa"
                android:text="Forget Password?"
                android:inputType="text"
                android:textSize="14sp"
                android:textColor="#f4e3b1" />

            <Button
                android:id="@+id/L_loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/salsa"
                android:inputType="textEmailAddress"
                android:minWidth="120dp"
                android:text="LOGIN"
                android:textColor="#7d3f02" />

            <TextView
                android:id="@+id/noAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/L_loginbtn"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/salsa"
                android:text="Don't have an account? Create One"
               android:textSize="14sp"
                android:textColor="#f4e3b1"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>

