<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7d3f02"
    tools:context=".com.team.my_gorcery.activities.SettingActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_08"
        android:padding="10dp">

        <!--Toolbar-->
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="My Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#f4e3b1"
            android:fontFamily="@font/caveat_brush"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/notification_switchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:text="Push Notification"
            android:fontFamily="@font/salsa"
            android:textColor="#f4e3b1"/>

        <!--Notification status-->
        <TextView
            android:id="@+id/notificationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_switchBtn"
            android:background="#f4e3b1"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/salsa"
            android:textColor="@color/colorBrown"
            android:text="Notifications are disabled"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#02231c"
            android:layout_below="@id/notificationStatus"/>


    </RelativeLayout>

</LinearLayout>