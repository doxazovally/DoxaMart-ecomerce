<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/row_oS"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="7dp"
    android:layout_marginBottom="7dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#f4e3b1"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: 12345"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="#02231c"
            android:fontFamily="@font/salsa"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/orderDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/nextTv"
            android:text="01/06/2020"
            android:padding="3dp"
            android:fontFamily="@font/salsa"
            android:textColor="#7d3f02"/>

        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderIdTv"
            android:text="Email"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/salsa"
            android:textColor="#7d3f02"/>

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTv"
            android:text="Total Amount: $49.99"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/salsa"
            android:textColor="#7d3f02"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailTv"
            android:padding="3dp"
            android:layout_toStartOf="@+id/nextTv"
            android:text="In Progress"
            android:fontFamily="@font/salsa"
            android:textColor="#0BB40D"/>

        <ImageView
            android:id="@+id/nextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>