<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="17dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#f4e3b1"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderIdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: 12345"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="#03321c"
            android:fontFamily="@font/salsa"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="01/06/2020"
            android:fontFamily="@font/salsa"
            android:padding="3dp"
            android:textColor="@color/colorBrown"/>

        <TextView
            android:id="@+id/shopNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderIdTv"
            android:text="XYZ Shop"
            android:fontFamily="@font/salsa"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorBrown"/>

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopNameTv"
            android:text="Total Amount: $49.99"
            android:fontFamily="@font/salsa"
            android:padding="3dp"
            android:layout_marginStart="2dp"
            android:textColor="@color/colorBrown"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopNameTv"
            android:padding="3dp"
           android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:text="In Progress"
            android:fontFamily="@font/salsa"
            android:textColor="#04B10B"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>