<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="#f4e3b1"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/O_itemTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/salsa"
            android:padding="2dp"
            android:layout_marginStart="2dp"
            android:text="Item Name"
            android:textSize="16sp"
            android:textColor="#02231c" />

        <TextView
            android:id="@+id/O_itemPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10"
            android:fontFamily="@font/salsa"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBrown"
            android:layout_below="@id/O_itemTitleTv"
            android:layout_marginStart="3dp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/O_itemTitleTv">

            <TextView
                android:id="@+id/O_itemPriceEachTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/salsa"
                android:padding="5dp"
                android:text="10/KG"
                android:textColor="@color/colorBrown" />

            <TextView
                android:id="@+id/O_itemQuantityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:fontFamily="@font/salsa"
                android:text="[2]"
                android:textColor="@color/colorBrown"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>